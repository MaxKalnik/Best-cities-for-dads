
.icon:before
  content: ''
  display: inline-block
  background-position: 0px 0px
  background-size: 100% auto
  background-repeat no-repeat
  vertical-align middle

.icon-airplane:before
  background-image: url(images/icons/icon-airplane.svg)
  height: 16px
  width: 16px
  margin-right: 8px

.icon-author:before
  width: 21px
  height: 21px
  background-image: url(images/svg/author.svg)
  margin-right: 10px

.icon-register:before
  background-image: url(images/svg/icon-user.svg)
  height: 12px
  width: 11px
  margin-top: -3px

.icon-fb:before
  background-image: url(images/svg/icon-facebook.svg)
  height: 15px
  width: 7px

.icon-twitter:before
  background-image: url(images/svg/icon-twitter.svg)
  height: 13px
  width: 16px

.icon-google:before
  background-image: url(images/svg/iocn-google.svg)
  height: 20px
  width: 24px

.icon-next:before
  background-image: url(images/svg/icon-next.svg)
  height: 20px
  width: 20px

.icon-next_white:before
  background-image: url(images/svg/icon-next_white.svg)
  height: 20px
  width: 20px

.icon-close:before
  background-image: url(images/svg/icon-close.svg)
  height: 12px
  width: 10px

.icon-close-black:before
  background-image: url(images/svg/icon-close-black.svg)
  height: 12px
  width: 12px

.icon-zoom:before
  background-image: url(images/svg/icon-zoom.svg)
  height: 16px
  width: 16px


.icon-food:before
  background-image: url(../images/svg/small_energy.svg)
  height: 16px
  width: 12px
  background-size contain
  margin-left: 4px
  margin-right: 5px
  position: relative
  top: -1px

.icon-telescope:before
  background-image: url(images/icons/icon_telescope.svg)
  height: 44px
  width: 44px
  margin-right: 16px

.icon-disco-ball:before
  background-image: url(images/icons/icon_disco-ball.svg)
  height: 44px
  width: 44px
  margin-right: 16px

.icon-thrill:before
  background-image: url(images/icons/icon_thrill.svg)
  height: 44px
  width: 44px
  margin-right: 16px

.icon-typical:before
  background-image: url(images/icons/icon_typical.svg)
  height: 44px
  width: 44px
  margin-right: 16px

@media (max-width: 759px)
  .icon-telescope:before,
  .icon-disco-ball:before,
  .icon-thrill:before,
  .icon-typical:before
    position: absolute
    top: 0
    left: 50%
    transform: translateX(-50%)
