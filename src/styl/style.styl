  color: #fff
  letter-spacing: -1.4px
  line-height: 54px
  padding-bottom: 13px
  font-weight: 600

.article-author
  font-size: 13px
  color: #FFFFFF
  letter-spacing: 0
  line-height: 16px
  display flex
  align-items center
  font-weight 300
  i
    height: 24px

.under-title
  font-size: 18px
  color: $text_color
  letter-spacing: 0
  line-height: 30px
  position: relative
  padding-bottom: 32px
  font-weight 300
  $ultraThin()
  &.with-icon
    padding-top: 18px
    padding-left: 108px
    font-size 18px
    line-height 32px
    &:before
      content: ''
      display: inline-block
      background-image: url(images/svg/family_road.svg)
      position: absolute
      background-size: 100% auto
      background-repeat no-repeat
      width: 90px;
      height: 127px;
      left: -2px;
      top: 25px;

  &.expert-quote
    max-width 84%

  .under-title__bold
    font-weight: 700


.show_more:hover
  .show_more__text
    border-bottom-color: rgba(31, 146, 204, .0)

.show_more__text
  font-weight 600
  font-size: 14px
  color: #0DA4F0
  letter-spacing: 0.3px
  line-height: 22px
  border-bottom: 1px dotted rgba(31, 146, 204, .4)
  margin-left: 8px

.text-icon
  position: relative
  padding-left: 22px
  &:before
    content: ''
    position: absolute
    left: 2px
    top: 0
    width: 16px
    height: 16px
    background-repeat: no-repeat
    background-size: contain

.culture
  &:before
    background-image: url(images/svg/culture.svg)

.entertainment
  &:before 
    background-image: url(images/svg/entertainment.svg)

.outdoor
  &:before  
    background-image: url(images/svg/outdoor.svg)
    top: 2px

.sports
  &:before
    background-image: url(images/svg/sport.svg)
    background-repeat: no-repeat
    top: 2px


.accordion
  &-head
    display flex
    justify-content space-between
    text-align center
    &__wrap
      padding-top: 47px
      .primary-title
        font-size 29px
        padding-bottom: 27px
    &__item
      height: 165px
      box-sizing border-box
      width: 18%
      position: relative
      background-color: #fff
      border: 1px solid #CCEEFF
      border-radius: 5px
      font-size: 18px
      color: #1E92CC
      letter-spacing: 0
      line-height: 26px
      transition: all .3s linear
      background-image: url(images/svg/top.svg)
      background-repeat no-repeat
      background-position: center 25px
      padding-top: 124px
      &:first-child
        .accordion-head__number
          left: 43%
      &:nth-child(4)
        .accordion-head__number
          left: 41%
      &:nth-child(2)
        .accordion-head__number
          left: 41.5%
      &:nth-child(3)
        .accordion-head__number
          left: 41.5%

      &:hover
        background-color #eff9ff
        transition: all .3s linear
    &__number
      font-weight: 500
      font-size: 28px
      position: absolute
      top: 37px
      left: 42%
      color: #30B2F3
    &__text
      border-bottom: 1px dotted rgba(31, 146, 204, 0.40)
      font-size: 14px
      color: #1E92CC
      letter-spacing: 0
      line-height: 26px
      font-weight 300
      text-transform uppercase
  &-body
    &__item
      padding-bottom: 28px

    &.pic_right
      .accordion-pic
        float right
        margin-left: 30px
        margin-right: 0
      .accordion-text_box
        padding-left: 0
    .main-text
      color: #052333
      font-size: 14px
      line-height: 24px

  &-pic
    border-radius: 10px
    border 10px solid #fff
    box-shadow: 0 0 20px 0 rgba(8, 53, 77, 0.12), 10px 26px 53px -28px rgba(0, 0, 0, 0.75)
    float: left
    margin-right: 29px
    position: relative
    width: 413px
    height: 140px
    overflow hidden
    img
      position: absolute
      max-width 100%
      width: 100%
      top: -57%

  &-title
    font-weight 300
    font-size: 22px
    color: #475359
    letter-spacing: 0
    line-height: 32px
    margin-bottom: 20px
    padding-top: 2px
    $ultraThin()
    b
      padding-left: 11px
      font-weight 600
  &-text_box
    padding-left: 464px
    min-height 185px


