@import "_variable.styl"

body
  font-family: Whitney SSm A, sans-serif;

.content
  width: 1220px
  margin: 0 auto
  position relative

.main-text
  font-size: 14px
  color: $text_color
  letter-spacing: -0.1px
  line-height: 24px
  font-weight 400

  &.ind-text
    font-weight 300
  a
    color: $main_color
    border-bottom  1px solid rgba(63, 136, 197, 0.3)
    &:hover
      border-bottom: none
b
  font-weight 600

.cols__wrap
  display flex
  justify-content space-between
  &.multi-lines
    flex-wrap wrap

.primary-title
  font-size: 22px
  color: #475359
  letter-spacing: 0
  line-height: 42px
  font-weight 600
  text-align center
  padding-bottom: 37px

.small_table
  display: flex
  margin-top: 24px
  .col
    width: 100%
    
  .head-line
    color: #fff
    text-transform uppercase
    font-size 13px

  .line
    background: rgba(68, 204, 0, .1)
    border-bottom: 1px solid #fff
    display: flex
    border-radius: 3px 0 0 3px
    padding: 26px 45px 15px 16px;
    
  .line--bonus
    position: relative
    &:before
      content: 'Bonus Pick'
      position: absolute
      left: -14px
      top: 95px
      font-size: 12px
      line-height: 12px
      font-weight: 700
      text-transform: uppercase
      color: #8CAD09
      transform: rotate(-90deg)

  .name
    font-weight 600
    font-size: 14px
    color: $title_color
    letter-spacing: 0
    line-height: 16px
    position: relative
    padding-right: 25px
    padding-bottom: 16px
    display block

  .reg
    font-weight 600
    font-size: 10px
    color: #95A69D
    letter-spacing: 0
    line-height: 10px
    position: relative
    top: 0

  .num
    font-weight 600
    font-size: 14px
    letter-spacing: 0
    padding-right: 20px
    color: $main_color
    padding-top: 1px

  .text
    font-size: 14px
    color: #475359
    letter-spacing: -.2px
    line-height: 24px 
    
