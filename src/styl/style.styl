.primary-text
  font-size: 12px
  color: $text_color
  letter-spacing: 0
  line-height: 22px

.block-title
  font-weight 600
  font-size: 34px
  color: #475359
  letter-spacing: -1px
  line-height: 42px
  padding-bottom: 26px
  text-align center
  padding-top: 18px

.first-title
  color: #475359
  line-height: 42px
  text-transform: inherit
  letter-spacing: -1.0px

.b-main_article
  padding-top: 32px
  padding-bottom: 184px

.page__wrap
  background-image: url(images/footer_bg.png), url(images/svg/clouds_bg.svg), url(images/svg/clouds_bg.svg), linear-gradient(-180deg, #34C4F0 0%, #1C90E2 100%)
  background-position 50% 100%, 0 250px, 600px 50%
  background-repeat no-repeat, repeat-x, repeat-x
  background-size: auto, auto, auto

.main-pic
  position: relative
  background-position: center
  background-size: cover
  height: 568px
  padding: 34px 44px 40px 45px
  display: flex
  flex-direction: column
  justify-content: space-between
  box-sizing: border-box
  //box-shadow: 0 9px 20px 0 rgba(12, 92, 131, 0.40)
  border-radius: 5px 5px 0 0
  align-items flex-start
  position: relative
  background-image: url('images/main_pic.png')
  background-image: -webkit-image-set(url(images/main_pic.png) 1x, url(images/main_pic@2x.png) 2x)

.article-text
  z-index: 5

.main-pic__mask
  position: absolute
  left: 0
  bottom: 0
  width: 100%
  height: 200px
  opacity: 0.63
  background-image: linear-gradient(-180deg, rgba(0,0,0,0) 3%, rgba(0,0,0,0.3) 100%)
  z-index: 2

.text-box
  padding: 30px 45px 45px 45px
  background: #FFFFFF
  box-shadow: 0 9px 20px 0 rgba(12, 92, 131, 0.40)
  margin-bottom: 10px

.text-box--rate
  padding-bottom: 13px

.text-box--best
  padding-bottom: 20px
.text-box.last
  border-radius: 0 0 5px 5px
  position: relative
  z-index 1
.text-box--methodology
  padding-top: 44px
.article-table
  padding-bottom: 47px
.text-box--expert
  position: relative

.breadcrumbs
  &__wrap
    display flex
    background-color: rgba(255, 255, 255, .9)
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.10)
    border-radius: 2px
    padding: 0 14px

  &__item
    font-size: 12px
    letter-spacing: 0
    line-height: 42px
    color: #667780
    &:first-child
      &:before
        display: none
    &:before
      content: ''
      display: inline-block
      color: #fff
      width: 6px
      height: 13px
      background-image: url(images/svg/arrow.svg)
      background-position: 0px 5px
      background-size: 100% auto
      margin: 0 6px 0 8px
      background-repeat no-repeat

  &__link
    color: $main_color
    letter-spacing: 0
    line-height: 42px
    text-decoration underline
    $ultraThin()
    &:hover
      text-decoration none

.article-title
