  .text__link
    color: #75AD2E
    text-decoration: underline 
  .line
    background: rgba(251,252,243,1) 
  .line--bonus       
    .num
      &:before
        content: ''
        display: block
        width: 16px
        height: 16px
        background-image: url(images/svg/bonus-star.svg)
        
  .num
      color: #75AD2E
      

.small_table--party
  .text__link
    color: #FF8900
    text-decoration: underline 
  .line
    background: rgba(255,250,237,1)
  .line--bonus
    &:before
      content: 'Bonus Pick'
      position: absolute
      left: -14px
      top: 95px
      font-size: 12px
      line-height: 12px
      font-weight: 700
      text-transform: uppercase
      color: #FF7C17
      transform: rotate(-90deg)
    .num
      &:before
        content: ''
        display: block
        width: 16px
        height: 16px
        background-image: url(images/svg/bonus-star-orange.svg)
        
  .num
      color: #FF8900
      
.small_table--thrill
  .text__link
    color: #C20F0F
    text-decoration: underline 
  .line
    background: rgba(252,240,240,1)
  .line--bonus
    &:before
      content: 'Bonus Pick'
      position: absolute
      left: -14px
      top: 95px
      font-size: 12px
      line-height: 12px
      font-weight: 700
      text-transform: uppercase
      color: #C20F0F
      transform: rotate(-90deg)
    .num
      &:before
        content: ''
        display: block
        width: 16px
        height: 16px
        background-image: url(images/svg/bonus-star-red.svg)
        
  .num
      color: #C20F0F

.small_table--typical
  .text__link
    color: #2E7FD7
    text-decoration: underline 
  .line
    background: rgba(240,247,253,1)
